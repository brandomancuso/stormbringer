<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/skill_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/skill_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ems="5"
        app:layout_constraintBaseline_toBaselineOf="@+id/skill_value"
        app:layout_constraintStart_toEndOf="@+id/skill_check_box" />

    <TextView
        android:id="@+id/skill_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="3"
        app:layout_constraintBaseline_toBaselineOf="@+id/skill_incr"
        app:layout_constraintEnd_toStartOf="@+id/skill_incr" />

    <Button
        android:id="@+id/skill_incr"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_toStartOf="@+id/skill_decr"
        android:text="+1"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintBaseline_toBaselineOf="@+id/skill_incr10"
        app:layout_constraintEnd_toStartOf="@+id/skill_incr10" />

    <Button
        android:id="@+id/skill_incr10"
        android:layout_width="48dp"
        android:layout_height="35dp"
        android:textSize="12sp"
        android:text="+10"
        android:visibility="invisible"
        app:layout_constraintBaseline_toBaselineOf="@+id/skill_decr"
        app:layout_constraintEnd_toStartOf="@+id/skill_decr" />

    <Button
        android:id="@+id/skill_decr"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:text="-1"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintBaseline_toBaselineOf="@+id/skill_decr10"
        app:layout_constraintEnd_toStartOf="@+id/skill_decr10" />


    <Button
        android:id="@+id/skill_decr10"
        android:layout_width="48dp"
        android:layout_height="35dp"
        android:text="-10"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>